<div class="page-header">
  <h1>Edit <%= @organization.name_was %></h1>
</div>

<% if @organization.errors.any? %>
  <div class="alert alert-danger">
    <div id="error_explanation">
      <h2><%= pluralize(@organization.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% @organization.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>

<%= form_for @organization, html: {class: "form-horizontal"} do |f| %>
  <div class="form-group">
    <%= f.label :name, class: "control-label col-sm-2" %>
    <div class="col-sm-4">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-4 col-sm-offset-2">
      <%= f.submit class: "btn btn-primary" %>
      <%= link_to "cancel", organizations_path, class: "btn btn-default" %>
    </div>
  </div>
<% end %>
